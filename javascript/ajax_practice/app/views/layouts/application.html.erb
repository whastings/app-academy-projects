<!DOCTYPE html>
<html>
<head>
  <title>SecretShareAjax</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

  <div class="container">

    <nav class="navbar navbar-default">
      <div class="navbar-header">
        <%= link_to 'Secret Share', '/', class: 'navbar-brand' %>
      </div>

      <ul class="nav navbar-nav">
        <% if current_user %>
          <li><%= link_to 'Profile', user_url(current_user) %></li>
          <li><%= link_to 'Users', users_url %></li>
        <% end %>

      </ul>

      <div class="navbar-right user-controls">
        <% if current_user %>
          <p class="current-user-name">
            Signed-in as <%= current_user.username %>
          </p>
          <%= button_to 'Sign Out', session_url,
              method: :delete, class: 'btn btn-info btn-sign-out' %>
        <% else %>
          <%= link_to 'Sign In', new_session_url, class: 'btn btn-success' %>
          <%= link_to 'Sign Up', new_user_url, class: 'btn btn-info' %>
        <% end %>
      </div>
    </nav>

    <div class="row">
      <%= yield %>
    </div>
  </div>

</body>
</html>
